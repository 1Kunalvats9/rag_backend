datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  files     File[]
  chunks    Chunk[]
  messages  ChatMessage[]
  createdAt DateTime @default(now())
}

model File {
  id        String   @id @default(uuid())
  userId    String
  type      String
  url       String
  text      String?
  chunks    Chunk[]
  createdAt DateTime @default(now())

  user      User @relation(fields: [userId], references: [id])
}

model Chunk {
  id        String   @id @default(uuid())
  userId    String
  fileId    String
  text      String
  embedding Unsupported("vector")   
  createdAt DateTime @default(now())

  user      User @relation(fields: [userId], references: [id])
  file      File @relation(fields: [fileId], references: [id])
}

model ChatMessage {
  id        String   @id @default(uuid())
  userId    String
  question  String
  answer    String
  createdAt DateTime @default(now())

  user      User @relation(fields: [userId], references: [id])
}
